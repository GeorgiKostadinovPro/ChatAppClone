@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control" id="email" disabled>
    </div>
    <div class="form-group form-input-container">
        <label asp-for="Input.Username">Username</label>
        <input asp-for="Input.Username" type="text" class="form-control" id="username">
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group form-input-container">
        <label asp-for="Input.PhoneNumber">Phone number</label>
        <input asp-for="Input.PhoneNumber" class="form-control" id="email">
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="row form-btn-container">
        <div class="col">
            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-default btn-block">Cancel</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
