@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />

<section class="register-form">
    <div class="wrapper">
        <div class="container">
            <div class="forms">
                <div class="form signup">
                    <span class="title">Registration</span>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="input-field">
                            <input asp-for="Input.Username" type="text" placeholder="Enter your name" required>
                            <i class="uil uil-user"></i>
                        </div>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                        <div class="input-field">
                            <input asp-for="Input.Email" type="text" placeholder="Enter your email" required>
                            <i class="uil uil-envelope icon"></i>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                        <div class="input-field">
                            <input asp-for="Input.Password" type="password" class="password" placeholder="Create a password" required>
                            <i class="uil uil-lock icon"></i>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="input-field">
                            <input asp-for="Input.ConfirmPassword" type="password" class="password" placeholder="Confirm a password" required>
                            <i class="uil uil-lock icon"></i>
                            <i class="uil uil-eye-slash showHidePw"></i>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        <div class="checkbox-text">
                            <div class="checkbox-content">
                                <input asp-for="Input.AcceptTermsAndConditions" type="checkbox" id="termCon">
                                <label for="termCon" class="text">I accepted all terms and conditions</label>
                            </div>
                        </div> 
                        <span asp-validation-for="Input.AcceptTermsAndConditions" class="text-danger"></span>
                        <div class="input-field button">
                            <input type="submit" value="Signup">
                        </div>
                    </form>
                    <div class="login-signup">
                        <span class="text">
                            Already have an account?
                            <a asp-area="Identity" asp-page="/Account/Login" class="text login-link">Login Now</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="~/js/auth.js"></script>