@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<link rel="stylesheet" href="~/css/registerConfirmation.css" asp-append-version="true" />

<div class="register-confirmation-container">
    <img src="https://img.icons8.com/?size=100&id=GWmDjdtMZUP1&format=png&color=000000" alt="open email" />
    <h1>@ViewData["Title"]</h1>
    <p>We have sent an email to <span>@Model.Email</span> to confirm the validity of your email address. After receiving the email follow the link provided to complete your registration.</p>
</div>
