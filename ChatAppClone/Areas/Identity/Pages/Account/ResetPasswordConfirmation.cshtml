@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<link rel="stylesheet" href="~/css/passwordConfirmation.css" asp-append-version="true" />

<div class="password-confirmation-container">
    <img src="https://img.icons8.com/?size=100&id=91348&format=png&color=000000" alt="open email" />
    <h1>@ViewData["Title"]</h1>
    <p>Your password has been reset. Please login to continue.</p>
    <a asp-area="Identity" asp-page="/Account/Login">Sign in</a>
</div>
